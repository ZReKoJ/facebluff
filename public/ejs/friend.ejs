<!DOCTYPE html>
<html lang="es">

<head>
    <title>Facebluff</title>
    <meta charset="utf-8" />
    <link rel="icon" href="/resources/icon/logo.png" />
    <link rel="stylesheet" href="/css/utils.css" />
    <link rel="stylesheet" href="/css/friend.css" />
</head>

<body>
    <div class="container">
        <%- include("header") %>
        <div class="main">
            <input type='checkbox' value="â‡„" id='hide-request' class="button" 
            <% if (requests.length == 0) { %>
            checked
            <% } %>>
            <div class="request-panel">
                <ul value="No hay solicitudes de amistad"><%requests.forEach(element => {%>
                    <li>
                        <div class="other-users">
                            <img class="img-height-fill" src=<%="/img/user/" + element.id + "/avatar"%>>
                            <a class="text-cut" href=<%="/friend/" + element.id%>><%=element.username%></a>
                            <a class="button" href=<%="/friend/accept/" + element.id%>>Accept</a>
                            <a class="button" href=<%="/friend/decline/" + element.id%>>Decline</a>
                        </div>
                    </li>
                    <%});%></ul>
            </div>
            <div class="friend-panel">
                <form id="search-friend-form" action="/friend/search" method="post">
                    <input type="text" name="friend_to_search" placeholder="Buscar amigos" required>
                    <button type="submit"><img src="../resources/icon/search-icon.png" class="img-height-fill"></button>
                </form>
                <ul value="No tienes amigos"><%friends.forEach(element =>{%>
                    <li>
                        <div class="other-users">
                            <img class="img-height-fill" src=<%="/img/user/" + element.id + "/avatar"%>>
                            <a class="text-cut" href=<%="/friend/" + element.id%>><%=element.username%></a>
                        </div>
                    </li>
                    <%});%></ul>
            </div>
        </div>
        <%- include("footer") %>
    </div>
</body>

</html>