<!DOCTYPE html>
<html lang="es">

<head>
    <title>Facebluff</title>
    <meta charset="utf-8" />
    <link rel="icon" href="/resources/icon/logo.png" />
    <link rel="stylesheet" href="/css/utils.css" />
    <link rel="stylesheet" href="/css/profile.css" />
</head>

<body>
    <div class="container">
        <%- include("header") %>
        <div class="main">
            <div class="profile">
                <div class="profile-header">
                    <%if(currentUser.img){%>
                        <img src=<%="/img/user/" + currentUser.id + "/avatar"%> class="round">
                        <%}else{%>
                    <img src="../resources/img/avatar.png" class="round">
                    <%}%>
                    <div class="info-user">
                        <h2><%= currentUser.username %></h2>
                        <p><%= currentUser.birthdate %> years</p>
                        <p><%= currentUser.score %> points</p>
                    </div>
                    <%if(currentUser.id === user.id){%>
                    <a class="modify button round" href="/profile/modify"> <img class="img-height-fill" src="../resources/icon/edit-icon.png"></a>
                    <%}%>
                </div>
                <div class="profile-footer">
                    <input type="checkbox" id="check-friends" class="button" value="friends">
                    <input type="checkbox" id="check-questions" class="button" value="questions">
                    <input type="checkbox" id="check-followers" class="button" value="questions answered">
                    <input type="checkbox" id="check-description" class="button" value="description">
                    <div class="info-panel" id="friends-panel">
                        <h1 class="text-cut">friends</h1>
                        <h3 class="text-cut"><%=friends%></h3>
                    </div>
                    <div class="info-panel" id="questions-panel">
                        <h1 class="text-cut">questions</h1>
                        <h3 class="text-cut"><%=questions%></h3>
                    </div>
                    <div class="info-panel" id="followers-panel">
                        <h1 class="text-cut">questions<br>
                            answered
                        </h1>
                        <h3 class="text-cut"><%=questionsanswered%></h3>
                    </div>
                    <div class="info-panel" id="description-panel">
                        <h1 class="text-cut">description</h1>
                        <h3 class="text-cut"><%=currentUser.description%></h3>
                    </div>
                </div>
            </div>
        </div>
        <%- include("footer") %>
</body>

</html>